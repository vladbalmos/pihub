<div id="<%= featureId(id) %>_container">
<%
    if (typeof value === "undefined") {
        value = schema.default || '';
        
    }
    if (typeof value === 'object') {
        value = JSON.stringify(value, null, 2)
    }
%>
    <label class="form-label" for="<%= featureId(id); %>"><%= name %></label>
    <textarea class="form-control w-50" <%= el_disabled %> data-control-type="json" data-did="<%= did %>" data-fid="<%= id %>" class="form-control" id="<%= featureId(id); %>" rows="10"><%- value %></textarea>
    <p class="mt-3"><button type="button" data-save-btn="1" class="btn btn-primary" data-target="<%= featureId(id); %>">Submit</button></p>
</div>