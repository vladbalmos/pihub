<div id="<%= featureId(id) %>_container">
<%
    switchValue = null;
    checked = ''
    if (typeof value !== 'undefined') {
        switchValue = value;
    } else {
        switchValue = typeof schema.default !== 'undefined' ? schema.default : null;
    }

    if (switchValue !== null) {
        if (typeof switchValue === 'boolean') {
            switchValue = Number(switchValue);
        }
        switchValue = parseInt(switchValue, 10);
        checked = switchValue ? 'checked' : checked;
    }
%>
<input <%= el_disabled %> data-control-type="switch" data-did="<%= did %>" data-fid="<%= id %>" class="btn-check" type="checkbox" role="switch" id="<%= featureId(id); %>" <%- checked %>>
<label class="btn btn-outline-primary m-1" for="<%= featureId(id); %>"><%= name %></label>
</div>